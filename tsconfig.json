{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declaration": true,

    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "lib": ["es2019"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src",
  ]
}
